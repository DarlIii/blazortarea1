        new Video{Titulo = "Instalación de Visual Studio Code, Este video me gusta porque aprendes a instalar y configurar blazor con visual estudio code", Url = "kTMnwAHa_JY"},
        new Video{Titulo = "Extensiones para Blazor, Este video me gusta porque aprendes algunas extenciones que puedes usar con blazor en visual estudio", Url = "tBbzoLIAh3U"},
        new Video{Titulo = "Introducción a Blazor, Este video me gusta porque explica los funcionamientos basicos de blazor", Url = "hwzzpOq0MIg"}
    };
}
